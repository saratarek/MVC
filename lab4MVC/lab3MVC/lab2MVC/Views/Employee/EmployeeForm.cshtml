@model Employee

<h2>@ViewBag.Action Employee</h2>
@using (Html.BeginForm()) 
{
    if (ViewBag.Action == "Edit")
    {
        @Html.HiddenFor(m => m.Id)
    }
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
              @Html.LabelFor(m => m.Salary)
                @Html.TextBoxFor(m => m.Salary, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.Salary, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Address)
                @Html.TextAreaFor(m => m.Address, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
            </div>
            <input type="submit" value="@ViewBag.Action "class="btn btn-primary" />
        </form>
    </div>
</div>
}
